#:kivy 1.0.9

<TimerContainer>:   
    orientation:"vertical"
    rows:2
    spacing: 10
    padding:10
    decompte:decompte
    ti_nb_passages:ti_nb_passages
    ti_total_passages:ti_total_passages
    ti_nb_trampolines:ti_nb_trampolines
    ti_nb_rotations:ti_nb_rotations
    bt_play_pause:bt_play_pause
    Label:
        id: decompte
        font_size: 150
        color: [1, 0, 0, 1]
        text: "00' 59''"    
        size_hint: 1,.9
    BoxLayout:
        padding:10
        spacing:10
        size_hint: 1,.1
        orientation:"horizontal"
        Label:
            top: root.top - 10
            text: "Il reste"
        TextInput:
            size_hint: .2,1
            text: "3"
            multiline:False
            id:ti_nb_passages
            input_type:"number"
            on_text_validate:root.saisie_nb_passages(self.text)
        Label:
            top: root.top - 10
            text: "passages courts (parmis "
        TextInput:
            size_hint: .2,1
            text: "4"
            id:ti_total_passages
            multiline:False
            input_type:"number"
        Label:
            top: root.top - 10
            text: ") sur "
        TextInput:
            size_hint: .2,1
            multiline:False
            text: "3"
            id:ti_nb_trampolines
            input_type:"number"
        Label:
            text: "trampolines puis "
        TextInput:
            size_hint: .2,1
            multiline:False
            text: "4"
            id:ti_nb_rotations
            input_type:"number"
        Label:
            text: "rotations"
        Button:
            text: "Go !"
            id:bt_play_pause
            on_press:root.play_pause()
